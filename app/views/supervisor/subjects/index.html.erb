<% provide :title, t("subjects.index") %>
<h1><%= t "subjects.index" %></h1>
<div class="col-md-6 col-md-offset-3">
  <% if @subjects.any? %>
    <% @subjects.each do |subject| %>
      <li>
        <h2>
          <%= link_to subject.name, supervisor_subject_path(subject) %>
        </h2>
        <h5>
          <%= t "subjects.description" %> : <%= subject.description %>
        </h5>
        <h4><%= t "subjects.tasks" %>(<%= subject.tasks.count %>)</h4>
        <% if subject.tasks.any? %>
          <ol>
            <%= render subject.tasks %>
          </ol>
        <% end %>
        <%= link_to t("subjects.edit"), edit_supervisor_subject_path(subject),
          class: "btn btn-success" %>
        <%= link_to t("subjects.delete"), supervisor_subject_path(subject),
          method: :delete, class: "btn btn-danger" %>
      </li>
    <% end %>
  <% end %>
</div>
