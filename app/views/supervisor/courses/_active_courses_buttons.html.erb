<% if @course.init? %>
  <%= link_to t("button.start"),
    supervisor_course_active_courses_path(@course, status: Settings.start),
    method: :patch, class: "btn btn-primary" %>
<% elsif @course.start? %>
  <%= link_to t("button.finish"),
    supervisor_course_active_courses_path(@course, status: Settings.finish),
    method: :patch, class: "btn btn-success" %>
<% else %>
  <%= link_to t("button.finished"),supervisor_course_path,
    class: "btn btn-danger" %>
<% end %>
